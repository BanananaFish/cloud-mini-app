<!--index.wxml-->
<view class="page">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button class="userinfo-avatar" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" style="background-image: url({{avatarUrl}})"></button>
    <view>
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>
  <view class="weui-cells__title">教室借用审批状态</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_access">
      <view class="weui-cell__bd">
        <view style="display: inline-block; vertical-align: middle">未审批</view>
        <view class="weui-badge" style="margin-left: 5px;">666</view>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access" bindtap="tapToApproval" data-is-pass="0">查看</view>
    </view>
    <view class="weui-cell weui-cell_access">
      <view class="weui-cell__bd">
        <view style="display: inline-block; vertical-align: middle">已审批</view>
        <view class="weui-badge" style="margin-left: 5px;">888</view>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access" bindtap="tapToApproval" data-is-pass="1">查看</view>
    </view>
  </view>

</view>