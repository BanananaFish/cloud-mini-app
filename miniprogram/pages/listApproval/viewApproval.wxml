<!--miniprogram/pages/listApproval/viewApproval.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">查看审批</view>
    <view class="page__desc">编号： {{appr._id}}</view>
  </view>
  <view class="page__bd">
    <view class="weui-cells__title">借用信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">教室编号</view>
        <view class="weui-cell__ft">{{appr.classroomNumber}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">借用时间</view>
        <text class="weui-cell__ft" decode="true" selectable="true">{{appr.eventDate}}&emsp;{{appr.eventTime1}} - {{appr.eventTime2}}</text>
      </view>
    </view>

    <view class="weui-cells__title">活动信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="{{icon}}" style="margin-right: 3px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">社团/学生组织</view>
        <view class="weui-cell__ft">{{appr.associationName}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="{{icon}}" style="margin-right: 3px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">负责人 / 联系方式</view>
        <view class="weui-cell__ft">{{appr.eventResponser}} / {{appr.tel}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="{{icon}}" style="margin-right: 3px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">申请时间</view>
        <view class="weui-cell__ft">{{appr.submitDate}}</view>
      </view>
    </view>

    <view class="weui-cells__title">审批情况</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="{{icon}}" style="margin-right: 3px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">审批状态</view>
        <view class="weui-cell__ft">{{appr.done ? "已通过":"未审批"}}</view>
      </view>
      <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">审批意见</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">说明文字</view>
      </navigator>
      <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">审批人</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">说明文字</view>
      </navigator>
    </view>
    <!-- buttons begin -->
    <button wx:if="{{appr.done}}" class="weui-btn" type="warn">( 撤销 )</button>
    <view wx:else class="weui-flex" style="margin-top: 28rpx">
      <view class="weui-flex__item">
        <button class="weui-btn" type="primary">同意</button>
      </view>
      <view class="weui-flex__item">
        <button class="weui-btn" type="default">拒绝</button>
      </view>
    </view>
  </view>
</view>