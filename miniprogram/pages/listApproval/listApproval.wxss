/* miniprogram/pages/listApproval/listApproval.wxss */
@import "../../assets/weui.wxss";

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 15px 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-form-preview {
  margin: 10rpx;
}

.weui-form-preview__hd {
  padding: 5rpx 15px 0;
}

.weui-form-preview__ft{
  line-height: 40px;
  letter-spacing: 4px;
  border-bottom: 1px #f8f8f8 solid;
}
.weui-form-preview__item .weui-form-preview__value {
  color: #333;
}
