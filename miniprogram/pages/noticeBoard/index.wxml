<!--index.wxml-->
<import src="../common/foot.wxml" />
<view class="page">
  <view class="page__bd">
<!-- 具体日期选择 -->
 <!-- <view class="section"> -->
   <view class="weui-cells__title">请选择查询日期:</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd">
          <view class="weui-label">当前选择</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" value="{{date}}" start="2019-01-01" end="2999-01-01" bindchange="bindDateChange" name='eventDate'>
            <view class="weui-input">{{date}}</view>
          </picker>
        </view>
      </view>
    </view>
  <!-- </view> -->

<view class="weui-panel">
  <!-- 表格样式 -->
  <!-- <scroll-view class="table" scroll-x> -->
  <view class="weui-panel__bd">
    <view class="table">
    <view class="tr bg-w">
      <view class="th">房间号</view>
      <view class="th">时间</view>
      <view class="th">协会名称</view>
      <view class="th">负责人</view>
      <view class="th">联系方式</view>
    </view>
    <block wx:for="{{listData}}" wx:key="{{code}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td">{{item.code}}</view>
        <view class="td">{{item.time}}</view>
        <view class="td">{{item.association}}</view>
        <view class="td">{{item.responser}}</view>
        <view class="td">{{item.tel}}</view>
      </view>
      <view class="tr" wx:else>
        <view class="td">{{item.code}}</view>
        <view class="td">{{item.time}}</view>
        <view class="td">{{item.association}}</view>
        <view class="td">{{item.responser}}</view>
        <view class="td">{{item.tel}}</view>
      </view>
    </block>
    </view>
    </view>
  <!-- </scroll-view> -->
</view>
   <!-- 公告 -->
   <view class="rule weui-cells">
    <view class='title' data-index='1' catchtap='panel'>
      <view class='rule1' wx:if="{{showIndex == 0}}">↓ 注意事项及后续流程 ↓</view>
      <view class='rule1' wx:if="{{showIndex == 1}}">↑ 注意事项及后续流程 ↑</view>
      <!-- <view class=" {{showIndex == 1 ? 'title_3' : 'title_2' }} "></view> -->
    </view>
     <view  wx:if="{{showIndex == 1}}"><text class="rule-text">{{text}}</text></view>
  </view>

  </view>
</view>

